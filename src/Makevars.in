# link to petsc
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"` -Wl,-rpath,@rpath@ -L@libpath@ -lpetsc

# add include directories so that the c code can find the headers
PKG_CXXFLAGS = -I../inst/include

all: $(SHLIB)
	@if command -v install_name_tool; then echo "fixing search path on osx"; install_name_tool -change @linker@ '@rpath/libpetsc.3.6.dylib' taoR.so; fi
